{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "storybook": "lerna run storybook --stream",
    "docs:start": "cd packages/website; pnpm docs:start",
    "docs:build": "cd packages/website; pnpm docs:build;",
    "docs:deploy": "cd packages/website; pnpm docs:build; vercel --prod",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch --stream --concurrency 20 --parallel",
    "test": "lerna run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm test && lint-staged && pnpm build"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-transform-modules-commonjs": "^7.21.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.9.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^26.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.3.1",
    "canvas": "2.11.2",
    "husky": "^9.1.6",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.4",
    "prettier": "^2.8.4",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/runtime": "^7.10.5"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.9.0"
  }
}
